= form_for @hero do |f|
  - if @hero.errors.any?
    #error_explanation
      %h2= "#{pluralize(@hero.errors.count, "error")} prohibited this hero from being saved:"
      %ul
        - @hero.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :player
    = f.text_field :player
  .actions
    = f.submit 'Save'
