%div.hero-unit
  %h1 Achievements

%div.well
  = link_to 'New Achievement', new_achievement_path, :class => "btn btn-primary"
  = link_to 'Assign Achievement', new_achievement_instance_path, :class => "btn btn-primary"

%table{:class => "table table-striped table-bordered","data-provides" => "rowlink"}
  %thead
    %tr
      %th
      %th Name
      %th Description
      %th Heroes
  %tbody
    - @achievements.each do |achievement|
      %tr
        %td= image_tag achievement.image, :width => "120px"
        %td
          =link_to achievement.name, achievement
        %td= achievement.description
        %td.nolink
          - achievement.heros.each do |hero|
            =link_to hero.name, hero

