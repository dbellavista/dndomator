= form_for @skill_challenge, :html => {:class => "form-horizontal" } do |f|
  - if @skill_challenge.errors.any?
    #error_explanation
      %div{:class => "alert alert-error"}
        %h2= "#{pluralize(@skill_challenge.errors.count, "error")} prohibited this skill_challenge from being saved:"
        %ul
          - @skill_challenge.errors.full_messages.each do |msg|
            %li= msg

  - @skill_challenge.progress_success ||= 0
  - @skill_challenge.progress_failure ||= 0

  %fieldset
    %div.control-group
      = f.label :name, :class => "control-label"
      %div.controls
        = f.text_field :name, :class => "input-xlarge"
    %div.control-group
      = f.label :context, :class => "control-label"
      %div.controls
        = f.text_area :context, :class => "input-xlarge"
    %div.control-group
      = f.label :complexity, :class => "control-label"
      %div.controls
        = f.number_field :complexity
    %div.control-group
      = f.label :level, :class => "control-label"
      %div.controls
        = f.number_field :level
    %div.control-group
      = f.label :primary_skill, :class => "control-label"
      %div.controls
        = f.text_area :primary_skill, :class => "input-xlarge"
    %div.control-group
      = f.label :secondary_skill, :class => "control-label"
      %div.controls
        = f.text_area :secondary_skill, :class => "input-xlarge"
    %div.control-group
      = f.label :success, :class => "control-label"
      %div.controls
        = f.text_area :success, :class => "input-xlarge"
    %div.control-group
      = f.label :failure, :class => "control-label"
      %div.controls
        = f.text_area :failure, :class => "input-xlarge"
    %div.control-group
      = f.label :progress_success, :class => "control-label"
      %div.controls
        = f.number_field :progress_success
    %div.control-group
      = f.label :progress_failure, :class => "control-label"
      %div.controls
        = f.number_field :progress_failure
    %div.form-actions
      = f.submit 'Save', :class => "btn btn-primary"
