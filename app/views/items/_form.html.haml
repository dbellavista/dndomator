= form_for @item, :html => {:class => "form-horizontal" }  do |f|
  - if @item.errors.any?
    #error_explanation
      %div{:class => "alert alert-error"}
        %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
        %ul
          - @item.errors.full_messages.each do |msg|
            %li= msg

  %fieldset
    %div.control-group
      = f.label :name, :class => "control-label"
      %div.controls
        = f.text_field :name
    %div.control-group
      = f.label :level, :class => "control-label"
      %div.controls
        = f.text_field :level
    %div.control-group
      = f.label :value, :class => "control-label"
      %div.controls
        = f.decimal_field :value
    %div.form-actions
      = f.submit 'Save', :class => "btn btn-primary"
