= form_for @monster, :html => {:class => "form-horizontal" }  do |f|
  - if @monster.errors.any?
    #error_explanation
      %div{:class => "alert alert-error"}
        %h2= "#{pluralize(@monster.errors.count, "error")} prohibited this monster from being saved:"
        %ul
          - @monster.errors.full_messages.each do |msg|
            %li= msg

  %fieldset
    %div.row
      %div.span5
        %div.control-group
          = f.label :name, :class => "control-label"
          %div.controls
            = f.text_field :name
        %div.control-group
          = f.label :level, :class => "control-label"
          %div.controls
            = f.text_field :level
        %div.control-group
          = f.label :tier, :class => "control-label"
          %div.controls
            = f.select :tier, Monster.tiers.map{|x| [x.capitalize, x]}
      %div.offset6
        = image_tag(@monster.image)
    %div.form-actions
      = f.submit 'Save', :class => "btn btn-primary"
