%div.page-header
  %h1 Items

%div.well
  = link_to 'New Item', new_item_path, :class => "btn btn-primary"
  = link_to 'Auto-Create Items', auto_create_items_path, :class => "btn btn-primary"

%table{:class => "table table-striped table-bordered","data-provides" => "rowlink"}
  %thead
    %tr
      %th Name
      %th Level
      %th Value
      %th Heros
  %tbody
    - @items.each do |item|
      %tr
        %td=link_to item.name, item
        %td= item.level
        %td= item.value
        %td= item.heros.empty? ? "" : item.heros.map{ |h| h.name }


