%div.monster-unit
  %h1 Monsters

%div.well
  = link_to 'New Monster', new_monster_path, :class => "btn btn-primary"
  = link_to 'Auto-Create Monsters', auto_create_monsters_path, :class => "btn btn-primary"

- Monster.kinds.each do |k|
  - vals = instance_variable_get("@#{k.pluralize}")
  - unless vals.empty?
    %div.pre-scrollable
      %table{:class => "table table-striped table-bordered","data-provides" => "rowlink"}
        %thead
          %tr
            %th= k.capitalize
            %th Tier
            %th Level
        %tbody
          - vals.each do |v|
            %tr
              %td= link_to v.name, v
              %td= v.tier.capitalize
              %td= v.level
